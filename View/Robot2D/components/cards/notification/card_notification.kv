#:import IconLeftWidgetWithoutTouch kivymd.uix.list.IconLeftWidgetWithoutTouch
#:import Window kivy.core.window.Window


<CardNotificationItem@TwoLineAvatarIconListItem>

    left_icon: ""
    icon_color: [0, 0, 0, 0]
    theme_text_color: "Custom"
    secondary_theme_text_color: "Custom"
    secondary_font_style: "Caption"
    text_color: 1, 1, 1, 1
    secondary_text_color: 0, 0, 1, .5

    IconLeftWidgetWithoutTouch:
        icon: root.left_icon
        theme_text_color: "Custom"
        text_color: root.icon_color


<CardNotification>
    orientation: "vertical"
    orientation: "vertical"
    size_hint: None, None
    pos_hint: {"center_x": .5}
    y: "32dp"
    padding: 0



    ScrollView:

        do_scroll_x: False
        do_scroll_y: True

        Label:
            id: infoDebug
            size_hint_y: None
            height: self.texture_size[1]
            text_size: root.width, None
            padding: 10, 10
            text:''

