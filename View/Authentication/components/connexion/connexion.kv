<Connexion>
    md_bg_color: app.theme_cls.bg_dark

    MDLabel:
        text: "AUTHENTIFICATION"
        bold: True
        pos_hint: {"center_y": .8}
        font_style: "H5"
        halign: "center"

    Image:
        size_hint_y: .3
        pos_hint: {"center_x": .5, "center_y": .6}
        source:
            f"{os.environ['ROBOT_KS_ROOT']}" \
            f"/assets/images/field_screen/one_screen/bg.png"

    MDBoxLayout:
        md_bg_color: app.theme_cls.primary_color
        size_hint: None, .2
        width: self.height
        radius: self.height / 2
        pos: -self.height / 3, root.height - self.height + dp(42)

    MDBoxLayout:
        md_bg_color: app.theme_cls.primary_color
        size_hint: None, .15
        width: self.height
        radius: self.height / 2
        pos: root.width - self.width / 2.2, root.height - dp(240)

    MDBoxLayout:
        orientation: "vertical"
        spacing: "12dp"
        size_hint_x: .6
        pos_hint: {"center_x": .5, "center_y": .3}
        adaptive_height: True

        MDLabel:
            id: label_infoConexion
            text : ""
            font_style: "Subtitle2"
            pos_hint : {'center_x': 0.5, 'center_y': 0.1}
            halign: "center"

        MDTextField:
            id: login_field
            icon_left: "account"
            mode: "round"
            hint_text: "Login"
            normal_color: .8, .8, .8, 1
            color_active: .9, .9, .9, 1
            -height: "42dp"

        MDTextField:
            icon_left: "lock"
            id: password_field
            password : True
            helper_text_mode : "on_focus"
            input_filter: "int"
            required: True
            mode: "round"
            hint_text: "Mot de passe"
            normal_color: .8, .8, .8, 1
            color_active: .9, .9, .9, 1
            -height: "42dp"

        MDFillRoundFlatButton:
            text: "Se connecter"
            size_hint: None, None
            size: login_field.size[0], login_field.size[1]
            pos_hint: {"center_x": .5}
            #on_release: app.manager_screen.switch_screen("robot2D")
            on_release: root.authentification()

    MDLabel:
        text: "DEFILEZ VERS LA DROITE POUR RETROUVER LE MOT DE PASSE"
        bold: True
        adaptive_height: True
        halign: "center"
        y: dp(48)
        font_style: "Caption"
        theme_text_color: "Hint"
